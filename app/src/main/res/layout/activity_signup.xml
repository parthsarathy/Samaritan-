<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/plainbg" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="30dp" android:textStyle="bold" android:id="@+id/textview1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="60dp" android:text="Trust or Donars Name"/>
    <EditText android:textSize="30dp" android:textStyle="bold" android:id="@+id/name" android:background="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_below="@+id/textview1"/>
    <TextView android:textSize="30dp" android:textStyle="bold" android:id="@+id/textview2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="60dp" android:text="Email" android:layout_below="@+id/name"/>
    <EditText android:textSize="30dp" android:textStyle="bold" android:id="@+id/email" android:background="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_below="@+id/textview2"/>
    <TextView android:textSize="30dp" android:textStyle="bold" android:id="@+id/textview3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="60dp" android:text="Password" android:layout_below="@+id/email"/>
    <EditText android:textSize="30dp" android:textStyle="bold" android:id="@+id/pass" android:background="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_below="@+id/textview3"/>
    <Button android:textSize="20dp" android:id="@+id/register"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:text="REGISTER" android:layout_below="@+id/pass" android:layout_centerHorizontal="true"/>
    <ProgressBar android:id="@+id/progess" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
</RelativeLayout>
